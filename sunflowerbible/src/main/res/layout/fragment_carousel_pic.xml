<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.chm006.library.widget.ImageCarouselView
                    android:id="@+id/test1_imagecarouselview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_ImageCarouselView" />

                <TextView
                    android:text="Picasso"
                    android:textSize="18sp"
                    android:textColor="@color/font_color_w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.chm006.library.widget.ImageCarouselView
                    android:id="@+id/test1_imagecarouselview2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_ImageCarouselView" />

                <TextView
                    android:text="Glide"
                    android:textSize="18sp"
                    android:textColor="@color/font_color_w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.chm006.library.widget.ImageCarouselView
                    android:id="@+id/test1_imagecarouselview3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_ImageCarouselView" />

                <TextView
                    android:text="Fresco"
                    android:textSize="18sp"
                    android:textColor="@color/font_color_w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>